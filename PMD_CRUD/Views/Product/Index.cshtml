@model IEnumerable<PMD_CRUD.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Master Details Asp.Net Core</h1>
<p>
    <a asp-action="Create" asp-controller="Product" class="crBtn">Create New</a>
</p>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>                                                                                                              
            <th>
                @Html.DisplayNameFor(model => model.PDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PName)
                </td>
                <td>
                    <img src="@item.PImage" width="40" height="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    <button class="edBtn" type="button" data-id="@item.PId">Edit</button>
                    <a asp-action="Delete" asp-route-id="@item.PId">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="12">
                    <table>
                        <thead>
                            <tr>
                                <th>Category Id</th>
                                <th>Category Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in item.Details!)
                            {
                                <tr>
                                    <td>@i.Category!.CId</td>
                                    <td>@i.Category.CName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

<section class="mcon" style="display:none;">
    <div class="mbod p-5">
        <div class="macon"></div>
        <div class="modal-footer">
            <button class="clbtn">Close</button>
        </div>
    </div>
</section> 